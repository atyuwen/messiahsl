{
    "name": "messiahsl",
    "displayName": "MessiahSL",
    "description": "Messiah shader language extension",
    "version": "1.0.0",
    "publisher": "Messiah Engine Team",
    "icon": "icon.png",
    "readme": "README.md",
    "author": {
        "name": "wuyuwen@corp.netease.com"
    },
    "engines": {
        "vscode": "^1.24.0"
    },
    "categories": [
        "Programming Languages",
        "Linters"
    ],
    "activationEvents": [
        "onLanguage:hlsl"
    ],
    "main": "./extension",
    "contributes": {
        "keybindings": [{
            "command": "extension.ShaderLint",
            "key": "ctrl+f7",
            "mac": "cmd+f7",
            "when": "editorTextFocus"
        }],
        "configuration": {
            "type": "object",
            "title": "MessiahSL",
            "properties": {
                "messiahsl.runOnSave": {
                    "type": "boolean",
                    "default": false,
                    "description": "Run shader lint on save."
                },
                "messiahsl.enginePath": {
                    "type": ["string", "null"],
                    "default": null,
                    "description": "Specifies the folder path containing the messiah engine."
                }
            }
        }
    },
    "scripts": {
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.6",
        "eslint": "^4.11.0",
        "@types/node": "^7.0.43",
        "@types/mocha": "^2.2.42"
    }
}
