{
    "name": "messiahsl",
    "displayName": "MessiahSL",
    "description": "Messiah shader language extension",
    "version": "0.6.0",
    "publisher": "atyuwen",
    "icon": "icon.png",
    "readme": "README.md",
    "author": {
        "name": "wuyuwen"
    },
    "engines": {
        "vscode": "^1.24.0"
    },
    "categories": [
        "Programming Languages",
        "Linters"
    ],
    "activationEvents": [
        "onLanguage:hlsl"
    ],
    "main": "./extension",
    "contributes": {
        "grammars": [
            {
                "scopeName": "source.messiahsl",
                "path": "./syntaxes/messiahsl.tmLanguage.json",
                "injectTo": [
                    "source.hlsl"
                ]
            }
        ],
        "snippets": [
            {
                "language": "hlsl",
                "path": "./snippets/messiahsl.snippets.json"
            }
        ],
        "commands": [
            {
                "command": "extension.ShaderLint",
                "title": "Lint"
            },
            {
                "command": "extension.ShaderLintFast",
                "title": "Lint Full (Fast)"
            },
            {
                "command": "extension.ShaderLintFull",
                "title": "Lint Full (Slow)"
            }
        ],
        "keybindings": [
            {
                "when": "resourceExtname == .fx",
                "command": "extension.ShaderLint",
                "key": "ctrl+f7",
                "mac": "cmd+f7"
            },
            {
                "when": "resourceExtname == .fx",
                "command": "extension.ShaderLintFast",
                "key": "ctrl+shift+f7",
                "mac": "cmd+shift+f7"
            }
        ],
        "menus": {
            "editor/context": [
                {
                    "when": "resourceExtname == .fx",
                    "command": "extension.ShaderLint",
                    "group": "2_messiahsl"
                },
                {
                    "when": "resourceExtname == .fx",
                    "command": "extension.ShaderLintFast",
                    "group": "2_messiahsl"
                },
                {
                    "when": "resourceExtname == .fx",
                    "command": "extension.ShaderLintFull",
                    "group": "2_messiahsl"
                }
            ]
        },
        "configuration": {
            "type": "object",
            "title": "MessiahSL",
            "properties": {
                "messiahsl.enginePath": {
                    "type": [
                        "string",
                        "null"
                    ],
                    "default": null,
                    "description": "Specify the folder path containing the messiah engine."
                },
                "messiahsl.runOnSave": {
                    "type": "boolean",
                    "default": true,
                    "description": "Run shader lint on save."
                },
                "messiahsl.suppressWarning": {
                    "type": [
                        "string",
                        "null"
                    ],
                    "default": null,
                    "description": "Specify which warnings should be suppressed."
                },
                "messiahsl.autoRefresh": {
                    "type": "boolean",
                    "default": false,
                    "description": "Auto refresh shader source when compiled."
                }
            }
        }
    },
    "scripts": {
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.6",
        "eslint": "^4.11.0",
        "@types/node": "^7.0.43",
        "@types/mocha": "^2.2.42"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/atyuwen/messiahsl.git"
    }
}
