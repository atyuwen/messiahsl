{
    "name": "messiahsl",
    "displayName": "MessiahSL",
    "description": "Messiah shader language extension",
    "version": "0.3.0",
    "publisher": "atyuwen",
    "icon": "icon.png",
    "readme": "README.md",
    "author": {
        "name": "wuyuwen"
    },
    "engines": {
        "vscode": "^1.24.0"
    },
    "categories": [
        "Programming Languages",
        "Linters"
    ],
    "activationEvents": [
        "onLanguage:hlsl"
    ],
    "main": "./extension",
    "contributes": {
        "keybindings": [
            {
                "command": "extension.ShaderLint",
                "key": "ctrl+f7",
                "mac": "cmd+f7",
                "when": "editorTextFocus"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "MessiahSL",
            "properties": {
                "messiahsl.enginePath": {
                    "type": [
                        "string",
                        "null"
                    ],
                    "default": null,
                    "description": "Specifies the folder path containing the messiah engine."
                },
                "messiahsl.runOnSave": {
                    "type": "boolean",
                    "default": true,
                    "description": "Run shader lint on save."
                },
                "messiahsl.showWarning": {
                    "type": "boolean",
                    "default": true,
                    "description": "Print all D3D warngins."
                },
                "messiahsl.autoRefresh": {
                    "type": "boolean",
                    "default": true,
                    "description": "Auto refresh shader source when compiled."
                }
            }
        }
    },
    "scripts": {
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.6",
        "eslint": "^4.11.0",
        "@types/node": "^7.0.43",
        "@types/mocha": "^2.2.42"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/atyuwen/messiahsl.git"
    }
}
